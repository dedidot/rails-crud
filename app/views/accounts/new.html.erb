<%= form_for @user, url: accounts_path do |f| %>
    <div>
    <%= f.label :name %>
    </div>

    <div>
    <%= f.text_field :name%>
    </div>

    <div>
    <%= f.label :email %>
    </div>

    <div>
    <%= f.email_field :email %>
    </div>
    
    <div>
    <%= f.label :password %>
    </div>

    <div>
    <%= f.password_field :password %>
    </div>

    <div>
    <%= f.submit "Register" %>
    </div>
    
    
<% end %>